<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorCardView"
    app:cardCornerRadius="@dimen/cardview_radius"
    app:cardElevation="@dimen/cardview_elevation">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/STUDENT_NAME_REQUESTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shreyas Dodamani" />

            <TextView
                android:id="@+id/STUDENT_ROOM_REQUESTS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AF-028" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/NUMBER_OF_CLOTHES_REQUESTS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="69" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Clothes" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/BUCKET_COLOUR_REQUESTS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rainbow" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Colour Bucket" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/REQUEST_ACCEPT_BUTTON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_action_name_check_mark_requests" />

            <ImageButton
                android:id="@+id/REQUEST_REJECT_BUTTON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_action_name_cross_requests" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>