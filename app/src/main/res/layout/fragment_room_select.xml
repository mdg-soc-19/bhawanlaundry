<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".RoomSelectFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/HELLO_STUDENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello "
        android:textSize="40sp"
         />
    <TextView
        android:id="@+id/ROOM_TEXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room "
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/SELECT_A_ROOM"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a laundry-room:"
        android:textSize="30sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--Ax-Block Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ax-Block"
                android:textSize="@dimen/textSize2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laundryman In: "
                    android:textSize="@dimen/textSize2"/>
                <TextView
                    android:id="@+id/Ax_LAUNDRYMAN_IN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:text="YES/NO"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buckets in Queue: "
                    android:textSize="@dimen/textSize2"/>
                <TextView
                    android:id="@+id/Ax_QUEUE_LENGTH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:text="#"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/ENTER_Ax_ROOM_BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/enter_button_M"
            android:layout_marginBottom="@dimen/enter_button_M"
            android:text="@string/enter"/>
    </LinearLayout>

    <!--B-Block Layout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B-Block"
                android:textSize="@dimen/textSize2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Laundryman In: "
                    android:textSize="@dimen/textSize2"/>
                <TextView
                    android:id="@+id/B_LAUNDRYMAN_IN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:text="YES/NO"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buckets in Queue: "
                    android:textSize="@dimen/textSize2"/>
                <TextView
                    android:id="@+id/B_QUEUE_LENGTH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize2"
                    android:text="#"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/ENTER_B_ROOM_BUTTON"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/enter"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/enter_button_M"
            android:layout_marginBottom="@dimen/enter_button_M"/>
    </LinearLayout>
</LinearLayout>